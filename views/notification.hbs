<div class="container" style="margin-top: 3%;">
    <div class="row">
        <div class="col">
            <label style="font-size: 20px; display: flex; align-items: center">
                <svg width="18" height="18" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg"><rect width="48" height="48" fill="white" fill-opacity="0.01"/><path d="M44 24C44 35.0457 35.0457 44 24 44C18.0265 44 4 44 4 44C4 44 4 29.0722 4 24C4 12.9543 12.9543 4 24 4C35.0457 4 44 12.9543 44 24Z" fill="none" stroke="#333" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/><path d="M14 18L32 18" stroke="#333" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/><path d="M14 26H32" stroke="#333" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/><path d="M14 34H24" stroke="#333" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/></svg>
                &nbsp;通知列表
            </label>
        </div>
    </div>


    <div class="row">
        <div class="col-12">
            <div class="mt-2">
                <table class="table conf-table">
                    <thead>
                        <tr>
                            <th scope="col">主旨</th>
                            <th scope="col" class="text-center">寄件者</th>
                            <th scope="col" class="text-center">傳送時間</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{!-- 遍歷通知陣列 --}}
                        {{#each notice}}
                        {{!-- 如果已檢查過這筆通知->顯示灰字 --}}
                        {{#if this.isCheck}}
                        <tr onclick="tableClick('{{this.confId}}')" style="color: #c8c8c8;">
                            <td>會議【{{this.confInfo.name}}】附件已上傳</td>
                            <td class="text-center">{{this.sender.name}}</td>
                            <td class="text-center">{{this.sendTime}}</td>
                        </tr>
                        {{!-- 如果沒有檢查過這筆通知->顯示黑字 --}}
                        {{else}}
                        <tr onclick="noticeTableClick('{{this._id}}','{{this.confId}}')">
                            <td>會議【{{this.confInfo.name}}】附件已上傳</td>
                            <td class="text-center">{{this.sender.name}}</td>
                            <td class="text-center">{{this.sendTime}}</td>
                        </tr>
                        {{/if}}
                        {{/each}}
                    </tbody>

                </table>
                {{!-- 判斷有無通知 --}}
                {{#if notice}}
                {{else}}
                {{!-- 沒有通知 --}}
                <p class="text-center">目前沒有通知</p>
                {{/if}}
            </div>
        </div>
    </div>
</div>