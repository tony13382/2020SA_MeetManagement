<!-- 新增空間 -->
<div class="modal fade" id="NewRoomModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <form action="/createRoomFunc" method="POST" name="createRoomForm" onsubmit="return checkCreateForm()">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalCenterTitle">新增新空間</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true"></span>
                    </button>
                </div>
                <div class="modal-body">

                    <div style="padding:1% 1%">
                        <div class="row" style="width: 100%; margin:0 auto;padding:1% 2%">
                            <div class="col-sm">
                                <label for="meetingname">名稱：</label>
                                <input type="text" class="form-control" id="meetingname" name="name" required>
                            </div>
                        </div>
                        <div class="row" style="width: 100%; margin:0 auto;padding:1% 2%">
                            <div class="col-sm">
                                <label for="meetingname">地點：</label>
                                <input type="text" class="form-control" id="meetingname" name="location" required>
                            </div>
                        </div>
                        <div class="row" style="width: 100%; margin:0 auto;padding:1% 2%">
                            <div class="col-sm">
                                <label for="meetingname">管理人ID：</label>
                                <input class="form-control" list="staffList" name="managerId" size="10" required>
                                <datalist id="staffList">
                                    {{!-- 遍歷使用者陣列 --}}
                                    {{#each users}}
                                    <option value="{{this.staffId}}">{{this.name}}</option>
                                    {{/each}}
                                </datalist>

                            </div>
                        </div>
                        <div class="row" style="width: 100%; margin:0 auto;padding:1% 2%">
                            <div class="col-sm">
                                <label for="meetingname">可容納人數：</label>
                                <input type="number" min="0" class="form-control" id="meetingname" name="accommodate" required>
                            </div>
                        </div>
                        <div class="row" style="width: 100%; margin:0 auto;padding:1% 2%">
                            <div class="col-sm">
                                <label for="meetingname">價格：</label>
                                <input type="number" min="0" class="form-control" id="meetingname" name="price" required>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">關閉</button>
                    <button type="submit" class="btn btn-primary">新增</button>
                </div>
            </form>
        </div>
    </div>
</div>

