<div class="container">
    <div class="row">
        <div  class="col">
            <h3>我的個人資料</h3>
        </div>
    </div>
    <div>
        <div style="text-align: center" class="mt-2">
            <table class="table" id="myTable">
                <thead>
                    <tr>
                        <th scope="col">員工編號</th>
                        <th scope="col">姓名</th>
                        <th scope="col">職位</th>
                        <th scope="col" class="text-left">信箱</th>
                    </tr>
                </thead>
                <tbody>
                    {{!-- 遍歷主持的會議陣列 --}}
                    {{#each confsFilter}}
                    <tr>
                        <td>{{this.confData.staffId}}</td>
                        <td>{{this.confData.name}}</td>
                        <td>{{this.confData.position}}</td>
                        <td class="text-left">{{this.confData.email}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
